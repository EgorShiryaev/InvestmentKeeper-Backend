{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "exclude": ["node_modules", "./node_modules", "./node_modules/*", "example"]
}
